<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.dao.OrdersDao">
	
	<insert id="insert">
		insert into orders(business_id,member_id,num,comment_state,price)
		values(#{businessId},#{memberId},#{num},#{commentState},#{price})
	</insert>
	
	<update id="update">
		update orders
		<set>
			<if test="commentState != null">
				comment_state = #{commentState},
			</if>
		</set>
		where id=#{id}
	</update>
	
	<select id="selectByMemberId" resultType="Orders">
	    select business_id,member_id,num,comment_state,price from orders
	    where member_id=#{_parameter}
	</select>
	
</mapper>